{
  "name": "rouble-rate-bot",
  "author": "Ivan Shcherbakov",
  "license": "MIT",
  "engines": {
    "node": ">=5.0.0"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.70",
    "@types/mongodb": "^3.0.19",
    "@types/node": "^14.14.21",
    "mongodb": "^3.0.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "pm2": "^2.10.4",
    "prettier": "2.2.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "setup": "pm2 deploy ecosystem.config.js production setup",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "dump": "mongodump -d roubleratebot && tar -czvf dump.tar.gz dump/roubleratebot && aws s3 cp dump.tar.gz s3://isprogfun/rouble-rate-bot/db/",
    "cron": "make cron",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
